{
  "name": "functions",
  "type": "module",
  "scripts": {
    "build": "run-s build:tsc build:esbuild",
    "build:esbuild": "esbuild src/index.ts --bundle --platform=node --outfile=lib/index.js --format=esm --external:./node_modules/*",
    "build:tsc": "tsc",
    "build:watch": "run-p 'build:tsc -- --watch --preserveWatchOutput' 'build:esbuild -- --watch'",
    "dev": "run-p build:watch dev:*",
    "dev:emulators": "firebase emulators:start --only functions",
    "lint": "eslint --ext .js,.ts .",
    "run:migration": "tsx --tsconfig src/migrations/tsconfig.json",
    "serve": "npm run build && firebase emulators:start --only functions,storage,database",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "test": "run-s build test:jest",
    "test:jest": "cross-env SPSBTN_FIREBASE_TESTING=1 firebase emulators:exec --only functions,storage,database 'npx jest'",
    "test:jest:watch": "cross-env SPSBTN_FIREBASE_TESTING=1 firebase emulators:exec --ui --only functions,storage,database 'npx jest --watch'",
    "test:watch": "run-p build:watch test:jest:watch",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@google-cloud/pubsub": "^5.0.0",
    "@google-cloud/translate": "^9.1.0",
    "@types/node-gzip": "^1.1.3",
    "ajv": "^8.17.1",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "firebase-functions": "^6.3.2",
    "json-schema-to-ts": "^3.1.0",
    "langs": "^2.0.0",
    "lodash.isequal": "^4.5.0",
    "lzma-native": "^8.0.6",
    "sentence-splitter": "^5.0.0",
    "source-map-support": "^0.5.21",
    "youtubei.js": "^14.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "esbuild": "^0.25.4",
    "eslint": "^9.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.2"
  },
  "private": true
}
